{
  "name": "osmotar-api",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run tsx src/export-faceit.ts",
    "dev": "bun --watch run tsx src/export-faceit.ts",
    "start:cfg": "bun run tsx src/export-faceit.ts -- --config faceit.config.json",
    "preview": "bun run tsx src/preview.ts",
    "init": "bun run tsx src/init.ts -- --config faceit.config.json",
    "diag:standings": "bun run tsx src/diagnose-standings.ts -- --config faceit.config.json",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "format": "prettier . --write",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4",
    "typescript": "^5.9.3"
  },
  "peerDependencies": {
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/node": "^24.8.1",
    "csv-stringify": "^6.6.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.6"
  },
  "lint-staged": {
    "**/*.ts": [
      "eslint --max-warnings=0"
    ]
  }
}
